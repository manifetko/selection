                                            div(class="filter__lp" data-pos="0.2")
                                            div(class="filter__rp" data-pos="0.8")
                                    div(class="filter__values-wrap")
                                        span(class="filter__value-lp") 1 500 &#8381;
                                        span(class="filter__value-rp") 64 500 000 &#8381;
                                div(class="filter__parameter")
                                    h3(class="filter__parameter-heading") Количество
