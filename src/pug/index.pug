                        div(class="selection__type")
                            button(class="btn selection__type-btn")
                                svg(width="17" height="19" viewBox="0 0 17 19")
                                    use(xlink:href="./imgs/sprites.svg#parameters")
                                span(class="btn-text") Подбор по параметрам
                            button(class="btn selection__type-btn active")
                                svg(width="18" height="18" viewBox="0 0 18 18")
                                    use(xlink:href="./imgs/sprites.svg#visual")
                                span(class="btn-text") Визуальный подбор
                    div(class="selection__wrap")
                        aside(class="selection__aside")
                            div(class="filter")
                                div(class="filter__parameter filter__weight")
                                    h3(class="filter__parameter-heading") Фильтр1
                                    //- <input class="form-control" name="price" id="price">
                                    div(class="filter__slider")
                                        div(class="filter__bar" data-start="0" data-end="120")
                                            div(class="filter__lp" data-pos="0.2")
                                            div(class="filter__rp" data-pos="0.8")
                                    div(class="filter__values-wrap")
                                        span(class="filter__value-lp") 34 кг
                                        span(class="filter__value-rp") 120 кг
                                div(class="filter__parameter filter__price")
                                    h3(class="filter__parameter-heading") Стоимость
                                    div(class="filter__slider")
